.input-group .input-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  margin-bottom: 3.3%;
}
.input-group .input-row ._input {
  color: #ffffff;
  border-bottom: 4rpx solid #fff;
  margin-left: 20rpx;
  letter-spacing: 4rpx;
  vertical-align: middle;
  height: 60rpx;
}
.title {
  background-color: #ffffff;
  width: 20%;
  height: 70rpx;
  border-radius: 6rpx;
  color: #FFE25A;
  text-align: center;
  font-size: .8em;
  line-height: 70rpx;
}
.primary {
  background-color: #FFE25A;
  width: 24%;
  height: 80rpx;
  color: #ffffff;
  line-height: 80rpx;
  border: 2rpx solid #ffffff;
  border-radius: 10rpx;
  box-sizing: border-box;
  text-align: center;
  margin: 0 auto;
}
.btn-row {
  margin-top: 8.99%;
  margin-bottom: 7.5vh;
}
.checkpic {
  border: 2px solid #fff;
  height: 35px;
  color: #fff;
  line-height: 35px;
  text-align: center;
  font-size: .9em;
  border-radius: 5px;
  position: absolute;
  z-index: 3;
  background-color: #ffe25a;
  right: 13%;
  padding: 0 15px;
  box-sizing: border-box;
}
.checkpic:before {
  content: " ";
  width: 20rpx;
  height: 70rpx;
  position: absolute;
  left: -24rpx;
  background-color: #FFE25A;
}
.checkpic:after {
  content: " ";
  width: 40rpx;
  height: 70rpx;
  position: absolute;
  margin-left: 34rpx;
  background-color: #FFE25A;
}
